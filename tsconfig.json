{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@icons/*": ["src/icons/*"],
      "@types": ["src/types"],
      "@config": ["src/config"]
    },
    "jsx": "preserve",
    "jsxImportSource": "astro"
  }
}
